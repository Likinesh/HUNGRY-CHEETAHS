<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/spacex1.css">
</head>
<i>
<body style="background-image: url('pictures/blackspace.jpg!d');">
    <div class="navbar">
        <div class="links" >
            <a href="home" id="home">Home</a>
            <a href="about" id="about">About</a>
            <a href="services" id="service">Services</a>
            <a href="contact" id=contact>Contact</a>
        </div>
    </div>
    <h1 style="color: white;">Some Space Articles are: </h1>
    <ul>
    <% for(var i=0; i<data.results.length; i++) { %>
        <div id="border" style="color: azure;">
            <div style="margin-left: 2%;">
        <h3 style="font-size: xx-large;"  ><a style="color:  bisque;" href="<%= data.results[i].url %> "> <%=data.results[i].title %></a></h3>
        <% if (data.results[i].image_url !==null) { %>
            <div id="img"><img src="<%= data.results[i].image_url %>" alt="Image not available" height="300px" width="500px"></div>
        <% } %>
        <div style="font-size: x-large;">
        <p>Summary: <%= data.results[i].summary %></p>
        <p>Fetched from: <%= data.results[i].news_site %></p>
        <p>Published on: <%= data.results[i].published_at %></p>
    </div>
    </div>
    </div>
    
    <% } %>
    <div style="color: black;">
    </ul>
    <% if (data.previous!==null) { %>
        <form action="/space-articles-prev" method="post">
            <input type="submit" value="Prev">
        </form>
    <% } %>
    <% if (data.next!==null) { %>
        <form action="/space-articles-next" method="post">
            <input type="submit" value="Next">
        </form>
    

    <% } %>
</div>

</body>
</i>
</html>

    <link rel="stylesheet" href="css/solar.css">
</head>
<div class="navbar" style="border-radius: 0%;">
    <div class="links">
        <a href="home" id="home">Home</a>
            <a href="about" id="about">About</a>
            <a href="services" id="service">Services</a>
            <a href="contact" id=contact>Contact</a>
    </div>
   </div>
<body style="background-image:url(pictures/solar2.jpg); background-size:cover;">
    
    <h1 style="text-align:center; color: darkseagreen;">Planet Details:</h1>
    <form action="/solar-system" method="post"style="text-align:center;">
        <input type="text" name="planet" id="" placeholder="Planet name">
        <button type="submit">Search</button>
    </form>
    <div class="details" style="text-align:center; color:darkkhaki;">
    <%if (locals.solar!==null) { %>
            <h1 style="color:darkcyan">Details :</h1>
            <h2>Name of Planet:  <%=solar[0].name%></h2>
            <h3 >Mass : &nbsp; <%= solar[0].mass %>*1.898*10^27 kg</h3>
            <h3>Radius :<%=radi%>kms</h3>
            <h3>Timeperiod to revolve :<%=solar[0].period%>days</h3>
            <h3>Temperature :<%=solar[0].temperature%>K</h3>
    <% } %>
        <br>
<% if (locals.data) { %>
    <h1 style="color:darkorange">In our Solar System:</h1>
    <% for( let i = 0; i < data.knowncount.length; i++ ) { %>
        <h3>Number of <%= data.knowncount[i].id%> is <%= data.knowncount[i].knownCount %></h3>
    <% } }%>
    </div>
</body>
</html>
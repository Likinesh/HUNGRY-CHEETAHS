<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Some Space Blog: </h1>
    <ul>
    <% for(var i=0; i<data.results.length; i++) { %>
        <h3><a href="<%= data.results[i].url %> ">Title: <%=data.results[i].title %></a></h3>
        <% if (data.results[i].image_url !==null) { %>
            <img src="<%= data.results[i].image_url %>" alt="Image not available" height="300px" width="500px">
        <% } %>
        <p>Summary: <%= data.results[i].summary %></p>
        <p>Fetched from: <%= data.results[i].news_site %></p>
        <p>Published on: <%= data.results[i].published_at %></p>
    <% } %>
    </ul>
    <% if (data.previous!==null) { %>
        <form action="/space-blog-prev" method="post">
            <input type="submit" value="Prev">
        </form>
    <% } %>
    <% if (data.next!==null) { %>
        <form action="/space-blog-next" method="post">
            <input type="submit" value="Next">
        </form>
    <% } %>
</body>
</html>